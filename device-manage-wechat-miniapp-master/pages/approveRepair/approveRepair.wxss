/* 容器：确保背景色铺满，但内容从顶部自然排列 */
.container { 
  padding: 30rpx; 
  background-color: #f8f8f8; 
  min-height: 100vh; 
  display: block; /* 强制设为 block 模式，防止被全局 flex 布局居中 */
  box-sizing: border-box;
}

/* 顶部标题区样式 */
.page-header {
  padding: 10rpx 0 30rpx 10rpx;
}

.page-header .title { 
  font-size: 34rpx; 
  color: #333; 
  font-weight: bold; 
}

.page-header .subtitle {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 报修卡片：紧凑排列 */
.repair-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx; /* 卡片之间的间距 */
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.device-main {
  display: flex;
  align-items: center;
}

.device-icon { 
  width: 44rpx; 
  height: 44rpx; 
  margin-right: 16rpx; 
}

.device-name { 
  font-size: 32rpx; 
  font-weight: 600; 
  color: #333;
}

.status-badge { 
  font-size: 22rpx; 
  color: #faad14; 
  background: #fffbe6; 
  border: 1rpx solid #ffe58f;
  padding: 4rpx 16rpx; 
  border-radius: 8rpx; 
}

/* 信息网格布局 */
.info-grid {
  padding: 20rpx 0;
}

.info-item { 
  margin-bottom: 12rpx; 
  font-size: 26rpx; 
  display: flex;
  align-items: flex-start;
}

.label { 
  color: #8c8c8c; 
  width: 140rpx; /* 固定宽度对齐 */
  flex-shrink: 0;
}

.value { 
  color: #434343; 
  word-break: break-all;
}

/* 描述区域：浅色背景块 */
.description-area { 
  margin-top: 10rpx; 
  background: #fafafa; 
  padding: 20rpx; 
  border-radius: 12rpx; 
}

.description-area .label {
  font-size: 24rpx;
  margin-bottom: 8rpx;
  display: block;
}

.description-area .content { 
  font-size: 26rpx; 
  color: #595959; 
  line-height: 1.6; 
}

/* 底部操作区 */
.card-footer { 
  display: flex; 
  justify-content: center; /* 按钮居中显示，更符合审批习惯 */
  padding-top: 30rpx; 
  margin-top: 10rpx;
}

.btn-assign { 
  width: 80% !important; /* 调整按钮宽度，防止过小 */
  border-radius: 44rpx; 
  font-weight: 500; 
  background-color: #07c160 !important;
}

/* 空状态居中 */
.empty-base {
  padding-top: 300rpx;
  text-align: center;
}
.empty-image { width: 200rpx; height: 200rpx; }
.empty-desc { color: #bfbfbf; font-size: 28rpx; margin-top: 20rpx; }