/* 卡片整体样式 */
.approval-card {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  border: 1rpx solid #efefef;
}

/* 头部样式 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fafafa;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-left: 15rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.tag-warning {
  background: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

/* 内容区样式 */
.card-content {
  padding: 20rpx 30rpx;
}

.info-row {
  margin-bottom: 10rpx;
  font-size: 26rpx;
  display: flex;
}

.info-label {
  color: #888;
  width: 140rpx;
  flex-shrink: 0;
}

.info-value {
  color: #444;
}

.highlighted {
  color: #333;
  font-weight: 500;
}

.reason-box {
  background: #f9f9f9;
  padding: 15rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.reason-text {
  color: #d4380d; /* 使用深红色突出理由 */
  font-style: italic;
}

/* 底部按钮样式 */
.card-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.action-btns {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn-approve {
  background-color: #07c160 !important;
  color: white !important;
  border: none !important;
  margin: 0 !important;
}

.btn-refuse {
  background-color: #fff !important;
  color: #fa5151 !important;
  border: 1rpx solid #fa5151 !important;
  margin: 0 !important;
}